{
  "name": "gql-federation-schema-parser",
  "version": "0.0.0",
  "description": "CLI tool to parse GraphQL schemas and generate TypeScript definitions for use in a GraphQL Federation gateway.",
  "main": "build/src/index.js",
  "bin": "build/src/index.js",
  "author": {
    "name": "Tiago Boeing",
    "email": "contato@tiagoboeing.com"
  },
  "engines": {
    "node": "22.14.0"
  },
  "scripts": {
    "start:dev": "ts-node-dev --clear --respawn src/index.ts",
    "prebuild": "rm -rf ./dist",
    "build": "tsc && pkg package.json",
    "postbuild": "rm -rf ./build",
    "execute": "ts-node-dev src/index.ts"
  },
  "keywords": [
    "graphql",
    "federation",
    "cli",
    "schema",
    "parser"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/node": "^24.0.10",
    "pkg": "^5.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@graphql-tools/merge": "^9.0.24",
    "commander": "^14.0.0",
    "consola": "^3.4.2",
    "figlet": "^1.8.1",
    "graphql": "^16.11.0",
    "winston": "^3.17.0"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": [
      "schemas/**/*",
      "node_modules/figlet/fonts/**/*"
    ],
    "targets": [
      "latest-linux-arm64",
      "latest-macos-arm64",
      "latest-win-x64"
    ],
    "outputPath": "dist"
  }
}
